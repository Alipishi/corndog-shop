@model HelmonyCornDog.Models.LoginViewModel


@{
    ViewData["Title"] = "ورود به سایت";
}


<h1 class="text-center">ورود به سایت</h1>

<hr class="border border-dark border-1 opacity-25" />

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="alert alert-danger">شما دسترسی ندارید</div>
        }
        <form asp-action="Login" class=" px-4 py-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control paddingtop10"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group paddingtop5">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control paddingtop10"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check paddingtop10">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RemmemberMe"/> @Html.DisplayNameFor(model => model.RemmemberMe)
                </label>
            </div>
            <div class="form-group paddingtop10">
                <input type="submit" value="ورود به سایت" class="btn btn-outline-success"/>
            </div>
            <hr class="opacity-"/>
            <div>
                <a asp-action="Register" class="no-underline opacity-50">در حال حاضر حساب کاربری ندارم!</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
