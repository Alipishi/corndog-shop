@model HelmonyCornDog.Models.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

<h1 class="text-center">ثبت نام کاربر </h1>

<hr class="border border-dark border-1 opacity-25" />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Register" class=" px-4 py-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Name" class="control-label "></label>
                <input asp-for="Name" class="form-control paddingtop10" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group paddingtop5">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control paddingtop10" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group paddingtop5">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control paddingtop10" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group paddingtop5">
                <label asp-for="Repassword" class="control-label"></label>
                <input asp-for="Repassword" class="form-control paddingtop10" />
                <span  asp-validation-for="Repassword" class="text-danger"></span>
                
            </div>
            <div class="form-group paddingtop10">
                <input type="submit" value="ثبت نام" class="btn btn-success" />
            </div>
            <hr class="opacity-"/>
            <div>
                <a asp-action="Login" class="no-underline opacity-50">در حال حاضر یک حساب کاربری دارید؟ وارد شوید</a>
            </div>
        </form>
    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


