@model IEnumerable<ShowGroupViewModel>


<ul class="list-group">

 @foreach (var item in Model)
 {
     <li class="list-group-item d-flex justify-content-between align-items-center">
         <a class="no-underline" href="/Group/@item.GroupId/@item.Name">@item.Name</a>
         <span class="badge text-bg-primary rounded-pill">@item.ProductCount</span>
     </li>
 }

</ul>